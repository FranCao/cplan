<!DOCTYPE html>
<html>
  <head>
    <title>Courses</title>
  </head>

  <main class="course-list d-flex justify-content-center w-100 h-75 d-inline-block align-self-center bg-light">
    <div>
      <p id="notice"><%= notice %></p>
      <h1>Courses</h1>
      <table>
        <thead>
          <tr>
            <th colspan="3"></th>
          </tr>
        </thead>
        <thead>
          <tr>
            <th>Year</th>
            <th>Semester</th>
            <th>Course</th>
            <th>Section</th>
            <th>Time</th>
            <th>Instructor</th>
          </tr>
        </thead>
        <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td>
                <%= course.year %>
              </td>
              <td>
                <%= course.semester %>
              </td>
              <td>
                <%= course.course_identifier %> <%= course.course_name %>
              </td>
              <td>
                <%= course.section_number %>
              </td>
              <td>
                <%= course.time %>
              </td>
              <td>
                <%= course.instructor_name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </main>

</html>
