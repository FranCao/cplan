<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <thead>
    <tr>
      <th>Course</th>
      <th>Section</th>
      <th>Day</th>
      <th>Time</th>
      <th>Instructor</th>
      <th>Semester</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td>
          <%= course.department %><%= course.course %>
        </td>
        <td>
          00<%= course.section_num %>
        </td>
        <td>
          <%= translateDay(course) %>
        </td>
        <td>
          <%= translateTime(course.start) %> - <%= translateTime(course.end) %>
        </td>
        <td>
          <%= course.instructor %>
        </td>
        <td>
          <%= course.semester %> <%= course.year %>
        </td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
