<h1>New Student</h1>

<%= form_tag students_path, :class => 'form' do %>
  <%= label :student, :first_name, 'First Name', :class => 'col-form-label' %>
  <%= text_field :student, :last_name, :class => 'form-control' %>
  <%= label :student, :email, 'Email', :class => 'col-form-label'  %>
  <%= text_field :student, :email, :class => 'form-control' %>
  <%= label :student, :graduation_year, 'Graduation Year', :class => 'col-form-label'  %>
  <%= date_select :student, :graduation_year, {}, :class => 'form-control col-2 d-inline' %>
  <br/>
  <%= submit_tag 'Save Changes', :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', students_path, :class => 'btn btn-secondary' %>



<%= link_to 'Back', students_path %>
